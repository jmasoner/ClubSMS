<?xml version="1.0" encoding="utf-8"?>
<!--
    ClubSMS App - Manifest File
    
    Defines the app's components, permissions, and configuration.
    Configures:
    - Required permissions for SMS and Contacts access
    - App metadata and version information
    - Activity declarations and intent filters
    - Hardware requirements and compatibility
    
    Security considerations:
    - Only requests necessary permissions
    - Proper permission explanations in code
    - No unnecessary system access
    
    @author John (Electrical Engineer)
    @version 1.0
    @since 2024-12-24
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.clubsms">

    <!-- Required Permissions -->
    
    <!-- SMS Permissions - Core functionality for broadcasting messages -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    
    <!-- Contacts Permission - Import club members from phone contacts -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <!-- Network Permission - For future features like cloud backup -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage Permissions - For export/import functionality -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- Notification Permission - For broadcast completion notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Vibrate Permission - For notification feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Hardware Requirements -->
    
    <!-- Require SMS capability - Essential for app functionality -->
    <uses-feature android:name="android.hardware.telephony" 
        android:required="true" />
    
    <!-- Touch screen required for UI interaction -->
    <uses-feature android:name="android.hardware.touchscreen" 
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClubSMS"
        tools:targetApi="31">

        <!-- Main Activity - Primary app interface -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTop">
            
            <!-- App entry point from launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Handle SMS-related intents for future features -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="sms" />
            </intent-filter>
            
        </activity>

        <!-- Contact Management Activity - Member management interface -->
        <activity
            android:name=".ContactManagementActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            
            <!-- Enable up navigation -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
                
        </activity>

        <!-- Message History Activity - View all sent messages -->
        <activity
            android:name=".MessageHistoryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            
            <!-- Enable up navigation -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
                
        </activity>

        <!-- Settings Activity - App configuration -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">
            
            <!-- Enable up navigation -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
                
        </activity>

        <!-- SMS Broadcast Service - Background message sending -->
        <service
            android:name=".SmsBroadcastService"
            android:exported="false"
            android:enabled="true">
            <!-- Service for handling SMS broadcast operations -->
        </service>

        <!-- Notification Click Receiver - Handle notification interactions -->
        <receiver
            android:name=".NotificationClickReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.clubsms.NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>

        <!-- SMS Status Receiver - Track SMS delivery status -->
        <receiver
            android:name=".SmsStatusReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.clubsms.SMS_SENT" />
                <action android:name="com.clubsms.SMS_DELIVERED" />
            </intent-filter>
        </receiver>

        <!-- File Provider - For sharing exported data -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- App Metadata -->
        
        <!-- App Version Information -->
        <meta-data
            android:name="com.clubsms.version"
            android:value="1.0" />
        
        <!-- Feature Flags -->
        <meta-data
            android:name="com.clubsms.feature.cloud_backup"
            android:value="false" />
        
        <meta-data
            android:name="com.clubsms.feature.scheduled_messages"
            android:value="false" />
        
        <meta-data
            android:name="com.clubsms.feature.message_templates"
            android:value="false" />

        <!-- Privacy and Security Configuration -->
        
        <!-- Disable debug logging in release builds -->
        <meta-data
            android:name="com.clubsms.debug.logging"
            android:value="false" 
            tools:node="remove" />
        
        <!-- Enable crash reporting -->
        <meta-data
            android:name="com.clubsms.crash_reporting"
            android:value="true" />

    </application>

    <!-- App Compatibility and Requirements -->
    
    <!-- Minimum API Level 21 (Android 5.0) for modern features -->
    <uses-sdk 
        android:minSdkVersion="21" 
        android:targetSdkVersion="34" 
        android:compileSdkVersion="34" />
    
    <!-- Screen Size Support - Phone and small tablets -->
    <supports-screens 
        android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"
        android:requiresSmallestWidthDp="320" />
    
    <!-- OpenGL ES Version - Basic 2D graphics support -->
    <uses-feature 
        android:glEsVersion="0x00020000" 
        android:required="false" />

</manifest>